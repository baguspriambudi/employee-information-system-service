<h3>{{viewTitle}}</h3>
<div class="text-danger">
    <h3>{{msg}}</h3>
</div>

<form action="http://localhost:2000/api/v1/employee/update" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Nip</label>
            <input type="text" class="form-control" name="nip" placeholder="Nip" value="{{find.nip}}">
        </div>
        <div class="form-group col-md-6">
            <label>Full Name</label>
            <input type="text" class="form-control" name="name" placeholder="Full Name" value="{{find.name}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Select Gender</label>
            <select class="form-control" name="gender" value="{{find.gender}}">
                <option>M</option>
                <option>F</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label>Select Grade</label>
            <select class="form-control" name="grade" value="{{find.grade}}">
                <option>A</option>
                <option>B</option>
                <option>C</option>
                <option>D</option>
            </select>
            <div class="text-danger">
                {{grade}}
            </div>

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>yyyy-mm-dd</label>
            <input type="text" class="form-control" name="birthdate" placeholder="Birth Date"
                value="{{find.birthdate}}">
        </div>
        <div class="form-group col-md-6">
            <label>yyyy-mm-dd</label>
            <input type="text" class="form-control" name="entrydate" placeholder="Entry Date"
                value="{{find.entrydate}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="http://localhost:2000/api/v1/employee/view"><i class="fa fa-list-alt"></i>
            View All</a>
        <div class="text-success">
            {{success}}
        </div>
    </div>
</form>